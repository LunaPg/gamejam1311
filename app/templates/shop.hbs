<div class="shop">
  <div class="col-md-12">
    <h1>Shop</h1>
    {{#each items}}
      {{#unless locked}}
      <div class="row alert alert-info">
        <div class="col-xs-2 {{name}}">
            <div class="element animate" data-id="{{name}}" data-tooltip="{{name}}: {{count}}">
              <span class="element-icon {{icon}}"></span>
            </div>
            <!--<img src="styles/images/element-{{name}}.png" class="img-circle {{icon}}">-->
        </div>
        <div class="col-xs-8">{{name}} <span class="digit">({{score}})</span></div>
        <div class="col-xs-1">
          <button type="button" class="btn btn-primary buy" data-id="{{name}}">Buy</button>
        </div>
      </div>
        <div class="row"> 
          <div class="col-xs-12">
            <span>{{description}}</span>
          </div>
        </div>
      {{/unless}}
    {{/each}}
  </div>
</div>
